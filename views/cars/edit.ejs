<body>
    <!-- update the header -->
    <h1>Edit <%= car.name %></h1>
      <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" />
        <label for="isReadyToDrive">Ready to Drive?</label>
        <input type="checkbox" name="isReadyToDrive" <% if (car.isReadyToDrive) { %>checked<% } %> >
        <button type="submit">Update Car</button>
      </form>
    <a href="/cars">Back to Cars</a>
  </body>